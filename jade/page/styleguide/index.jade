extends ../../base/template.jade

append head-links
  link(rel='stylesheet' type='text/css' media='all' href='#{ urlPath.static.css }/styleguide.css')

block content
  header
    h1 RapidMiner Style Guide
    p Last updated: 
      strong 2015.09.24. - Istvan
  section#colors
    h2 Colors
    .container
      each val in ['orange', 'yellow', 'grey', 'black', 'blue']
        .color-box
          .color-box__rect(class='color-box--#{ val }')
          .color-box__label rapid-#{ val }
  section#fonts
    h2 Fonts
    .container
      h3 Open Sans
      .grid.font-text.font-text--light
        .col-1-3 Light 300
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--light.font-text--italic
        .col-1-3 Light 300 Italic
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--normal
        .col-1-3 Normal 400
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--normal.font-text--italic
        .col-1-3 Normal 400 Italic
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--semi-bold 
        .col-1-3 Semi-Bold 600
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--semi-bold.font-text--italic 
        .col-1-3 Semi-Bold 600 Italic 
        .col-2-3 Grumpy wizards make toxic brew for the evil Queen and Jack.
      .grid.font-text.font-text--bold 
